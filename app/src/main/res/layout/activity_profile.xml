<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#212121"
    tools:context="com.example.lit15146664.myapplication.ProfileActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/imageViewBanner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="#303f9f"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageViewLower"
        android:src="#f1fa9a"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageViewBanner" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageViewGame"
        android:src="@drawable/game"
        android:layout_marginStart="30dp"
        android:layout_above="@+id/imgLocation"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Samuel Little"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/imageViewGame"
        android:layout_toEndOf="@+id/imageViewGame"
        android:layout_marginStart="37dp"
        android:textIsSelectable="false"
        android:singleLine="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgLocation"
        android:src="@drawable/location"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageViewGame" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgCat"
        android:src="@drawable/cat"
        android:layout_below="@+id/imgLocation"
        android:layout_alignStart="@+id/imgLocation" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgSkype"
        android:src="@drawable/skype"
        android:layout_below="@+id/imgCat"
        android:layout_alignStart="@+id/imgCat" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBirthday"
        android:src="@drawable/birthday"
        android:layout_below="@+id/imgSkype"
        android:layout_alignStart="@+id/imgSkype" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Malmesbury, England"
        android:id="@+id/textView2"
        android:layout_above="@+id/imgCat"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tess, Sky"
        android:id="@+id/textView3"
        android:layout_above="@+id/imgSkype"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Saml.10"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/imgSkype"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10th November"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/imgBirthday"
        android:layout_alignStart="@+id/textView4" />

</RelativeLayout>
